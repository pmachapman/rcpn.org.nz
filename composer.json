{
    "name": "silverstripe/installer",
    "type": "silverstripe-recipe",
    "description": "The SilverStripe Framework Installer",
    "require": {
        "php": ">=7.1.0",
        "silverstripe/recipe-plugin": "^1.2",
        "silverstripe/recipe-cms": "^4.5@stable",
        "silverstripe-themes/simple": "^3.2.0",
        "silverstripe/googlesitemaps": "^2.1",
        "silverstripe/timepickerfield": "dev-master",
        "symbiote/silverstripe-gridfieldextensions": "^3.2",
        "undefinedoffset/silverstripe-nocaptcha": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "extra": {
        "resources-dir": "_resources",
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/database.yml",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/BookingCalendarPage.php",
            "app/src/CalendarEvent.php",
            "app/src/CalendarEventDate.php",
            "app/src/CalendarLocation.php",
            "app/src/CalendarPage.php",
            "app/src/CalendarXml.php",
            "app/src/ContactFormSubmission.php",
            "app/src/ContactPage.php",
            "app/src/CustomSideReport.php",
            "app/src/ExternalLink.php",
            "app/src/HomePage.php",
            "app/src/LeftSidebarPage.php",
            "app/src/Page.php",
            "app/src/PageController.php",
            "app/src/RightSidebarPage.php",
            "app/src/SermonAudioPage.php",
            "app/src/TwoSidebarPage.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ],
        "expose": [
            "app/css",
            "themes/arcana/css",
            "themes/arcana/fonts",
            "themes/arcana/images",
            "themes/arcana/js",
            "themes/simple/css"
        ]
    },
    "config": {
        "process-timeout": 600,
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true,
            "silverstripe/recipe-plugin": true
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
